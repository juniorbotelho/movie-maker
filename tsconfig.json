{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "outDir": "build",
    "strict": false,
    "declaration": true,
    "declarationDir": "build/types",
    "removeComments": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {},
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.spec.ts"
  ]
}
