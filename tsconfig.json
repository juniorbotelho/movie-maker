{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types",
    "baseUrl": ".",
    "paths": {
      "@Type/*": ["src/types/*"],
      "@App/*": ["app/*"],
      "@Cli/*": ["cli/*"],
      "@Config/*": ["config/*"],
      "@Service/*": ["service/*"],
      "@Temp/*": ["temp/*"],
      "@Source/*": ["src/*"],
      "@Utilities/*": ["utilities/*"]
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.spec.ts"
  ]
}
